@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Author>;

  <h1>Authors</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Authors have been Added</h3>
  }
<ul>
  @foreach (Author author in Model)
  {
    <li>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</li>
  }
</ul>

  <p>@Html.ActionLink("Add New Author", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>