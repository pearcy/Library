@model Library.Models.Book

<h1>Book Details</h1>

<h2>@Html.DisplayNameFor(model => model.BookTitle): @Html.DisplayFor(model => model.BookTitle)</h2>

<h3>@Html.DisplayNameFor(model => model.Authors): @Html.DisplayFor(model => model.Authors)</h3>

<h3>@Html.DisplayNameFor(model => model.BookGenre): @Html.DisplayFor(model => model.BookGenre)</h3>

<p>@Html.Label("Copies Available in Library"): @Html.DisplayFor(model => model.CopyCount - model.Patrons.Count)</p>

